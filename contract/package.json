{
  "name": "@private-diploma/contract",
  "version": "0.1.0",
  "description": "PrivateDiploma smart contract for educational credential verification",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "compact": "compact compile src/diploma.compact src/managed/diploma",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && cp -Rf ./src/managed ./dist/managed && cp ./src/diploma.compact ./dist",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "0.14.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
